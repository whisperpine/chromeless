{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "formatter": { "indentStyle": "space" },
  "files": {
    "includes": ["./components/**", "./entrypoints/**"]
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
